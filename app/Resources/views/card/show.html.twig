{% extends 'base.html.twig' %}

 {% block headline %}
     Card
 {% endblock %}

{% block content %}
    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ card.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ card.name }}</td>
            </tr>
            <tr>
                <th>Question</th>
                <td>{{ card.question }}</td>
            </tr>
            <tr>
                <th>Answer</th>
                <td>{{ card.answer }}</td>
            </tr>
            <tr>
                <th>Hint</th>
                <td>{{ card.hint }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ card.position }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('card_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('card_edit', { 'id': card.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
